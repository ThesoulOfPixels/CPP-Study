//struct.cpp
#include <iostream>
#include <string>
using namespace std;
struct human
{
  unsigned old = 0;
  double money = 0;
  bool alive = true;
};

bool death(human man)
{
  man.alive = false;
  return man.alive;
}

//humans
human tom
{
    tom.old = 3;
    tom.money = 10000;
    tom.alive = true;
};

int main()
{
  death(tom);
  cout << tom.alive << endl;
  return 0;
}
